{
  "compilerOptions": {
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "target": "es6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "rootDirs": [
      "src",
      "../../libs/protocol",
      "../../libs/entities",
      "../../libs/domain",
    ],
    "paths": {
      "@vidya/api/*": ["src/*"],
      "@vidya/protocol": ["../../libs/protocol"],
      "@vidya/entities": ["../../libs/entities"],
      "@vidya/domain": ["../../libs/domain"],
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "specs/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}