#!/bin/bash

# ---------------------------------------------------------------------------- #
#                                     Doc                                      #
# ---------------------------------------------------------------------------- #

echo "
# ---------------------------------------------- #
#                  Database Drop                 #
# ---------------------------------------------- #
"

# ---------------------------------------------------------------------------- #
#                                     Task                                     #
# ---------------------------------------------------------------------------- #

echo "Starting Postgres..."
sudo service postgresql start >> /dev/null

echo "Dropping database..."
npx --workspace @vidya/database typeorm schema:drop -d ./dist/main.js
